<input
  value="{{value}}"
  type="{{inputType}}"
  placeholder="{{placeholder}}"
  disabled={{isDisabled}}
  readonly={{isReadonly}}
  maxlength={{maxLength}}
  onblur={{action onBlur}}
  onfocus={{action onFocus}}
  onclick={{action onClick}}
  onKeyUp={{action onChange value='target.value'}}
/>

